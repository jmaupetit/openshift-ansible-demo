apiVersion: v1
kind: Service
metadata:
  namespace: "{{ namespace }}"
  name: "{{ app.name }}"
  labels:
    app: "{{ app.name }}"
spec:
  ports:
    - name: "{{ app.name }}-8080-tcp"
      port: 8080
      protocol: TCP
      targetPort: 8080
  selector:
    app: "{{ app.name }}"
    deploymentconfig: "{{ app.name }}"
  type: ClusterIP
